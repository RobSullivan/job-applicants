extends layout


                  
block content

  h1 Applicants for web dev
    

      include ./includes/search-form.pug
      table
        thead
          tr
            th(scope="col") Applicant id
            th(scope="col") Applicant name
            th(scope="col") Summary
            th(scope="col") More
              tbody
                each applicant in applicant_list
                  tr
                  td(class="numeric") #{applicant.id}
                  td #{applicant.full_name}
                  td #{applicant.summary}
                  td 
                    a(href='/applicants/view?id='+applicant.id) Read more